<%- include('../partials/header') %>

    <!-- Header Section -->
    <div class="flex-between mb-6">
        <div>
            <h1>Inventory</h1>
            <p class="text-muted">Manage your product catalog</p>
        </div>
        <div class="header-actions" style="display: flex; gap: var(--space-3);">
            <a href="/products/export" class="btn btn-outline">‚¨áÔ∏è Export CSV</a>
            <% if (typeof currentUser !=='undefined' && ['owner', 'manager' ].includes(currentUser.role)) { %>
                <a href="/products/new" class="btn btn-primary">+ Add Product</a>
                <% } %>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (typeof error !=='undefined' && error) { %>
        <div class="alert alert-danger mb-4">
            <span>‚úï</span>
            <%= error %>
                <button class="alert-close" onclick="this.parentElement.remove()">√ó</button>
        </div>
        <% } %>
            <% if (typeof success !=='undefined' && success) { %>
                <div class="alert alert-success mb-4">
                    <span>‚úì</span>
                    <%= success %>
                        <button class="alert-close" onclick="this.parentElement.remove()">√ó</button>
                </div>
                <% } %>

                    <!-- Product Table Card -->
                    <div class="card">
                        <% if (products.length===0) { %>
                            <!-- Empty State -->
                            <div class="empty-state">
                                <div class="empty-state-icon">üì¶</div>
                                <h3>No products found</h3>
                                <p>Add your first one to start managing your inventory!</p>
                                <% if (typeof currentUser !=='undefined' && ['owner', 'manager'
                                    ].includes(currentUser.role)) { %>
                                    <a href="/products/new" class="btn btn-primary">+ Add Product</a>
                                    <% } %>
                            </div>
                            <% } else { %>
                                <!-- Table Header with Search & Filters -->
                                <div class="card-header">
                                    <div class="table-toolbar">
                                        <div class="table-search">
                                            <span class="table-search-icon">üîç</span>
                                            <input type="text" class="table-search-input"
                                                placeholder="Search products..." id="productSearch">
                                        </div>
                                        <div class="table-filters">
                                            <button class="filter-chip active" data-filter="all">All</button>
                                            <button class="filter-chip" data-filter="low-stock">Low
                                                Stock</button>
                                            <button class="filter-chip" data-filter="in-stock">In Stock</button>
                                        </div>
                                    </div>
                                    <div class="table-meta">
                                        <span class="text-muted text-sm">
                                            <%= products.length %> product<%= products.length !==1 ? 's' : '' %>
                                        </span>
                                    </div>
                                </div>

                                <!-- Styled Table -->
                                <div class="table-responsive">
                                    <table class="styled-table">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>SKU</th>
                                                <th>Category</th>
                                                <th>Stock</th>
                                                <th>Price</th>
                                                <th class="text-right">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% products.forEach(product=> { %>
                                                <tr
                                                    data-stock="<%= product.stock_quantity < 5 ? 'low-stock' : 'in-stock' %>">
                                                    <!-- Image + Name -->
                                                    <td>
                                                        <div class="product-cell">
                                                            <div class="product-thumbnail">
                                                                <% if (product.image_url) { %>
                                                                    <img src="<%=product.image_url %>"
                                                                        alt="<%= product.name %>">
                                                                    <% } else { %>
                                                                        üì¶
                                                                        <% } %>
                                                            </div>
                                                            <div class="product-info">
                                                                <span class="product-name">
                                                                    <%= product.name %>
                                                                </span>
                                                                <% if (product.description) { %>
                                                                    <span class="product-desc">
                                                                        <%= product.description.substring(0, 50) %>
                                                                            <%= product.description.length> 50 ?
                                                                                '...' :
                                                                                '' %>
                                                                    </span>
                                                                    <% } %>
                                                            </div>
                                                        </div>
                                                    </td>

                                                    <!-- SKU -->
                                                    <td>
                                                        <code class="sku-code"><%= product.sku || '‚Äî' %></code>
                                                    </td>

                                                    <!-- Category -->
                                                    <td>
                                                        <% if (product.category_name) { %>
                                                            <span class="category-tag">
                                                                <%= product.category_name %>
                                                            </span>
                                                            <% } else { %>
                                                                <span class="text-muted">Uncategorized</span>
                                                                <% } %>
                                                    </td>

                                                    <!-- Stock Badge -->
                                                    <td>
                                                        <% if (product.stock_quantity <=0) { %>
                                                            <span class="badge badge-danger">Out of Stock</span>
                                                            <% } else if (product.stock_quantity < 5) { %>
                                                                <span class="badge badge-warning">Low Stock (<%=
                                                                        product.stock_quantity %>)</span>
                                                                <% } else { %>
                                                                    <span class="badge badge-success">In Stock (
                                                                        <%= product.stock_quantity %>)
                                                                    </span>
                                                                    <% } %>
                                                    </td>

                                                    <!-- Price -->
                                                    <td>
                                                        <span class="price">$<%= parseFloat(product.price).toFixed(2) %>
                                                        </span>
                                                    </td>

                                                    <!-- Actions -->
                                                    <td class="text-right">
                                                        <div class="action-buttons">
                                                            <button class="btn btn-sm btn-primary adjust-stock-btn"
                                                                data-product-id="<%= product.id %>"
                                                                data-product-name="<%= product.name %>"
                                                                data-current-stock="<%= product.stock_quantity %>"
                                                                title="Adjust Stock">
                                                                üì¶ Adjust
                                                            </button>
                                                            <a href="/products/<%= product.id %>/history"
                                                                class="btn btn-sm btn-ghost" title="History">
                                                                üìä
                                                            </a>
                                                            <% if (typeof currentUser !=='undefined' &&
                                                                ['owner', 'manager' ].includes(currentUser.role)) { %>
                                                                <a href="/products/<%= product.id %>/edit"
                                                                    class="btn btn-sm btn-secondary" title="Edit">
                                                                    ‚úèÔ∏è
                                                                </a>
                                                                <form
                                                                    action="/products/<%= product.id %>?_method=DELETE"
                                                                    method="POST" class="inline-form"
                                                                    onsubmit="return confirm('Are you sure you want to delete this product?')">
                                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                                        title="Delete">
                                                                        üóëÔ∏è
                                                                    </button>
                                                                </form>
                                                                <% } %>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Table Footer with Pagination -->
                                <div class="table-footer">
                                    <div class="pagination-info">
                                        Showing <strong>1-<%= products.length %></strong> of <strong>
                                            <%= products.length %>
                                        </strong> products
                                    </div>
                                    <div class="pagination">
                                        <button class="pagination-btn" disabled>
                                            ‚Üê Previous
                                        </button>
                                        <button class="pagination-btn active">1</button>
                                        <button class="pagination-btn" disabled>
                                            Next ‚Üí
                                        </button>
                                    </div>
                                </div>
                                <% } %>
                    </div>

                    <!-- Stock Adjustment Modal -->
                    <dialog id="adjustModal" class="modal">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h3>üì¶ Adjust Stock</h3>
                                <button class="modal-close" onclick="closeAdjustModal()">√ó</button>
                            </div>
                            <form id="adjustForm" method="POST">
                                <div class="modal-body">
                                    <p class="text-muted mb-4">Adjusting stock for: <strong
                                            id="modalProductName"></strong> (Current: <span
                                            id="modalCurrentStock">0</span>)</p>

                                    <div class="form-group">
                                        <label class="form-label">Adjustment Type <span
                                                class="required">*</span></label>
                                        <select name="adjustment_type" id="adjustmentType" class="form-select" required>
                                            <option value="">-- Select Type --</option>
                                            <option value="add">‚ûï Add Stock (Receive/Restock)</option>
                                            <option value="remove">‚ûñ Remove Stock (Sale/Loss)</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Quantity <span class="required">*</span></label>
                                        <input type="number" name="quantity" class="form-input" min="1" required
                                            placeholder="e.g., 10">
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Reason</label>
                                        <select name="reason" id="adjustmentReason" class="form-select">
                                            <option value="">-- Select adjustment type first --</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label">Notes (Optional)</label>
                                        <textarea name="notes" class="form-textarea" rows="2"
                                            placeholder="Any additional details..."></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        onclick="closeAdjustModal()">Cancel</button>
                                    <button type="submit" class="btn btn-primary">‚úì Confirm</button>
                                </div>
                            </form>
                        </div>
                    </dialog>

                    <style>
                        .modal {
                            border: none;
                            border-radius: var(--radius-lg);
                            padding: 0;
                            max-width: 500px;
                            width: 90%;
                            box-shadow: var(--shadow-xl);
                            position: fixed;
                            top: 50%;
                            left: 50%;
                            transform: translate(-50%, -50%);
                            margin: 0;
                        }

                        .modal::backdrop {
                            background: rgba(0, 0, 0, 0.5);
                        }

                        .modal-content {
                            background: white;
                        }

                        .modal-header {
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                            padding: var(--space-5);
                            border-bottom: 1px solid var(--border-color);
                        }

                        .modal-header h3 {
                            margin: 0;
                        }

                        .modal-close {
                            background: none;
                            border: none;
                            font-size: 1.5rem;
                            cursor: pointer;
                            color: var(--text-muted);
                            line-height: 1;
                        }

                        .modal-close:hover {
                            color: var(--text-primary);
                        }

                        .modal-body {
                            padding: var(--space-5);
                        }

                        .modal-footer {
                            display: flex;
                            justify-content: flex-end;
                            gap: var(--space-3);
                            padding: var(--space-5);
                            border-top: 1px solid var(--border-color);
                        }
                    </style>

                    <script>
                        let currentProductId = null;

                        function openAdjustModal(productId, productName, currentStock) {
                            currentProductId = productId;
                            document.getElementById('modalProductName').textContent = productName;
                            document.getElementById('modalCurrentStock').textContent = currentStock;
                            document.getElementById('adjustForm').action = `/products/${productId}/adjust`;
                            document.getElementById('adjustmentType').value = '';
                            document.getElementById('adjustmentReason').innerHTML = '<option value="">-- Select adjustment type first --</option>';
                            document.getElementById('adjustModal').showModal();
                        }

                        function closeAdjustModal() {
                            document.getElementById('adjustModal').close();
                            document.getElementById('adjustForm').reset();
                        }

                        // Attach click handlers to adjust buttons
                        document.querySelectorAll('.adjust-stock-btn').forEach(btn => {
                            btn.addEventListener('click', function () {
                                const productId = this.dataset.productId;
                                const productName = this.dataset.productName;
                                const currentStock = this.dataset.currentStock;
                                openAdjustModal(productId, productName, currentStock);
                            });
                        });

                        // Dynamic reason options based on adjustment type
                        const addReasons = [
                            { value: 'Restock', label: 'üì¶ Restock / New Inventory' },
                            { value: 'Return', label: '‚Ü©Ô∏è Customer Return' },
                            { value: 'Correction', label: '‚úèÔ∏è Inventory Correction' },
                            { value: 'Transfer In', label: 'üì• Transfer In' }
                        ];

                        const removeReasons = [
                            { value: 'Sale', label: 'üí∞ Sale' },
                            { value: 'Damaged', label: 'üíî Damaged / Lost' },
                            { value: 'Expired', label: '‚è∞ Expired' },
                            { value: 'Transfer Out', label: 'üì§ Transfer Out' },
                            { value: 'Correction', label: '‚úèÔ∏è Inventory Correction' }
                        ];

                        document.getElementById('adjustmentType')?.addEventListener('change', function () {
                            const reasonSelect = document.getElementById('adjustmentReason');
                            const reasons = this.value === 'add' ? addReasons : this.value === 'remove' ? removeReasons : [];

                            reasonSelect.innerHTML = reasons.length
                                ? reasons.map(r => `<option value="${r.value}">${r.label}</option>`).join('')
                                : '<option value="">-- Select adjustment type first --</option>';
                        });

                        // Product Search Filter
                        document.getElementById('productSearch')?.addEventListener('input', function (e) {
                            const searchTerm = e.target.value.toLowerCase();
                            const rows = document.querySelectorAll('.styled-table tbody tr');

                            rows.forEach(row => {
                                const text = row.textContent.toLowerCase();
                                row.style.display = text.includes(searchTerm) ? '' : 'none';
                            });
                        });

                        // Filter Chips
                        document.querySelectorAll('.filter-chip').forEach(chip => {
                            chip.addEventListener('click', function () {
                                // Update active state
                                document.querySelectorAll('.filter-chip').forEach(c => c.classList.remove('active'));
                                this.classList.add('active');

                                const filter = this.dataset.filter;
                                const rows = document.querySelectorAll('.styled-table tbody tr');

                                rows.forEach(row => {
                                    if (filter === 'all') {
                                        row.style.display = '';
                                    } else {
                                        row.style.display = row.dataset.stock === filter ? '' : 'none';
                                    }
                                });
                            });
                        });

                        // Auto-trigger Low Stock filter if coming from dashboard
                        const urlParams = new URLSearchParams(window.location.search);
                        if (urlParams.get('filter') === 'lowstock') {
                            const lowStockChip = document.querySelector('.filter-chip[data-filter="low-stock"]');
                            if (lowStockChip) {
                                lowStockChip.click();
                            }
                        }
                    </script>

                    <%- include('../partials/footer') %>