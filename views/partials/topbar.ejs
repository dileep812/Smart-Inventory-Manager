<!-- Top Bar / Header -->
<header class="topbar">
    <!-- Left: Mobile Menu + Breadcrumbs -->
    <div class="topbar-left">
        <!-- Mobile Menu Toggle Button -->
        <button class="mobile-menu-toggle" aria-label="Toggle menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <nav class="breadcrumbs" aria-label="Breadcrumb">
            <ol>
                <li><a href="/dashboard">Home</a></li>
                <% if (typeof breadcrumb !=='undefined' && breadcrumb) { %>
                    <% breadcrumb.forEach((item, index)=> { %>
                        <li>
                            <span class="breadcrumb-separator">/</span>
                            <% if (index===breadcrumb.length - 1) { %>
                                <span class="breadcrumb-current">
                                    <%= item.label %>
                                </span>
                                <% } else { %>
                                    <a href="<%= item.url %>">
                                        <%= item.label %>
                                    </a>
                                    <% } %>
                        </li>
                        <% }); %>
                            <% } else if (typeof pageTitle !=='undefined' ) { %>
                                <li>
                                    <span class="breadcrumb-separator">/</span>
                                    <span class="breadcrumb-current">
                                        <%= pageTitle %>
                                    </span>
                                </li>
                                <% } %>
            </ol>
        </nav>
    </div>

    <!-- Center: Search Bar -->
    <div class="topbar-center">
        <div class="topbar-search" id="searchWrapper">
            <span class="topbar-search-icon">üîç</span>
            <input type="text" class="topbar-search-input" placeholder="Search products, categories..."
                id="globalSearch" autocomplete="off" onkeyup="handleSearch(event)">
            <kbd class="topbar-search-shortcut">Ctrl+K</kbd>

            <!-- Search Dropdown Results -->
            <div class="search-dropdown" id="searchDropdown">
                <div class="search-results" id="searchResults">
                    <!-- Results will be injected here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Search Dropdown Styles -->
    <style>
        .topbar-search {
            position: relative;
        }

        .search-dropdown {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            z-index: 1000;
            margin-top: 8px;
            overflow: hidden;
            max-height: 350px;
            overflow-y: auto;
        }

        .search-dropdown.active {
            display: block;
            animation: searchFade 0.2s ease;
        }

        @keyframes searchFade {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .search-result-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            cursor: pointer;
            transition: background 0.2s;
            text-decoration: none;
            color: inherit;
        }

        .search-result-item:hover,
        .search-result-item.selected {
            background: var(--bg-secondary);
        }

        .search-result-icon {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            background: var(--bg-secondary);
        }

        .search-result-icon.product {
            background: #DBEAFE;
        }

        .search-result-icon.category {
            background: #D1FAE5;
        }

        .search-result-content {
            flex: 1;
            min-width: 0;
        }

        .search-result-name {
            font-weight: 500;
            font-size: 0.9rem;
            color: var(--text-primary);
            margin: 0;
        }

        .search-result-subtitle {
            font-size: 0.75rem;
            color: var(--text-muted);
            margin: 0;
        }

        .search-empty {
            text-align: center;
            padding: 2rem;
            color: var(--text-muted);
        }

        .search-loading {
            text-align: center;
            padding: 1.5rem;
            color: var(--text-muted);
        }
    </style>

    <script>
        let searchTimeout = null;
        let selectedIndex = -1;

        // Keyboard shortcut Ctrl+K to focus search
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
                e.preventDefault();
                document.getElementById('globalSearch').focus();
            }
            // Escape to close dropdown
            if (e.key === 'Escape') {
                closeSearchDropdown();
            }
        });

        function handleSearch(e) {
            const query = e.target.value.trim();
            const dropdown = document.getElementById('searchDropdown');

            // Arrow key navigation
            if (e.key === 'ArrowDown' || e.key === 'ArrowUp') {
                navigateResults(e.key === 'ArrowDown' ? 1 : -1);
                return;
            }

            // Enter to go to selected result
            if (e.key === 'Enter') {
                const selected = document.querySelector('.search-result-item.selected');
                if (selected) {
                    window.location.href = selected.href;
                }
                return;
            }

            // Clear previous timeout
            if (searchTimeout) clearTimeout(searchTimeout);

            if (query.length < 2) {
                // Just hide dropdown, don't blur - user is still typing
                document.getElementById('searchDropdown').classList.remove('active');
                return;
            }

            // Show loading
            dropdown.classList.add('active');
            document.getElementById('searchResults').innerHTML = '<div class="search-loading">Searching...</div>';

            // Debounce search
            searchTimeout = setTimeout(() => performSearch(query), 300);
        }

        async function performSearch(query) {
            try {
                const res = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
                const data = await res.json();

                if (data.success) {
                    renderSearchResults(data.results);
                }
            } catch (error) {
                console.error('Search failed:', error);
                document.getElementById('searchResults').innerHTML = '<div class="search-empty">Search failed</div>';
            }
        }

        function renderSearchResults(results) {
            const container = document.getElementById('searchResults');
            selectedIndex = -1;

            if (!results || results.length === 0) {
                container.innerHTML = '<div class="search-empty">No results found</div>';
                return;
            }

            container.innerHTML = results.map((r, i) => `
                <a href="${r.url}" class="search-result-item" data-index="${i}">
                    <div class="search-result-icon ${r.type}">
                        ${r.type === 'product' ? 'üì¶' : 'üìÅ'}
                    </div>
                    <div class="search-result-content">
                        <p class="search-result-name">${escapeSearchHtml(r.name)}</p>
                        <p class="search-result-subtitle">${escapeSearchHtml(r.subtitle)}</p>
                    </div>
                </a>
            `).join('');
        }

        function navigateResults(direction) {
            const items = document.querySelectorAll('.search-result-item');
            if (items.length === 0) return;

            items.forEach(item => item.classList.remove('selected'));

            selectedIndex += direction;
            if (selectedIndex < 0) selectedIndex = items.length - 1;
            if (selectedIndex >= items.length) selectedIndex = 0;

            items[selectedIndex].classList.add('selected');
            items[selectedIndex].scrollIntoView({ block: 'nearest' });
        }

        function closeSearchDropdown() {
            document.getElementById('searchDropdown').classList.remove('active');
            document.getElementById('globalSearch').blur();
        }

        function escapeSearchHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            const wrapper = document.getElementById('searchWrapper');
            if (wrapper && !wrapper.contains(e.target)) {
                closeSearchDropdown();
            }
        });
    </script>

    <!-- Right: Quick Actions -->
    <div class="topbar-right">
        <!-- Notifications Bell -->
        <div class="notification-wrapper">
            <button class="topbar-icon-btn" id="notificationBtn" title="Notifications" onclick="toggleNotifications()">
                <span>üîî</span>
                <% if (typeof unreadCount !=='undefined' && unreadCount> 0) { %>
                    <span class="topbar-badge" id="notificationBadge">
                        <%= unreadCount> 9 ? '9+' : unreadCount %>
                    </span>
                    <% } else { %>
                        <span class="topbar-badge" id="notificationBadge" style="display: none;">0</span>
                        <% } %>
            </button>

            <!-- Notification Dropdown -->
            <div class="notification-dropdown" id="notificationDropdown">
                <div class="notification-header">
                    <h4>Notifications</h4>
                    <button class="notification-mark-all" id="markAllReadBtn" onclick="markAllNotificationsRead()">
                        Mark all read
                    </button>
                </div>
                <div class="notification-list" id="notificationList">
                    <div class="notification-loading">Loading...</div>
                </div>
            </div>
        </div>

        <!-- Quick Add Button (Owners & Managers only) -->
        <% if (typeof currentUser !=='undefined' && ['owner', 'manager' ].includes(currentUser.role)) { %>
            <a href="/products/new" class="btn btn-primary btn-sm">
                <span>+</span>
                <span>Quick Add</span>
            </a>
            <% } %>
    </div>
</header>

